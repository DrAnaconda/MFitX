<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="anonymouls.dev.mgcex.app">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />


    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:name=".backend.ApplicationStarter"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme"
        android:icon="@mipmap/ic_launcher"
        android:fullBackupContent="@xml/backup_descriptor">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3631159279486321~5110209612" />


        <activity
            android:name="anonymouls.dev.mgcex.app.data.MultitaskActivity"
            android:label="@string/title_activity_report_activity"
            android:theme="@style/Theme.AppCompat.DayNight" />

        <activity
            android:name="anonymouls.dev.mgcex.app.scanner.ScanActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="anonymouls.dev.mgcex.app.main.DeviceControllerActivity"
            android:label="Device Control"
            android:showOnLockScreen="true"
            android:theme="@style/Theme.AppCompat.DayNight" />

        <activity
            android:name="anonymouls.dev.mgcex.app.data.DataView"
            android:label="Data"
            android:theme="@style/Theme.AppCompat.DayNight" />

        <activity
            android:name="anonymouls.dev.mgcex.app.main.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.AppCompat.DayNight"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="anonymouls.dev.mgcex.app.AlarmActivity"
            android:label="@string/title_activity_alarm" />

        <receiver android:name="anonymouls.dev.mgcex.app.backend.PhoneStateListenerBroadcast">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".backend.MultitaskListener">
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <service
            android:name="anonymouls.dev.mgcex.app.backend.NotificationService"
            android:enabled="true"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </service>

        <service
            android:name="anonymouls.dev.mgcex.app.backend.Algorithm"
            android:label="@string/background_syncer"
            android:foregroundServiceType="connectedDevice"
            android:permission="android.permission.BIND_JOB_SERVICE"

            android:enabled="true" />
    </application>



</manifest>