<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="anonymouls.dev.mgcex.app">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />


    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme"
        android:icon="@mipmap/ic_launcher"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3631159279486321~5110209612"/>


        <activity
            android:name="anonymouls.dev.mgcex.app.data.MultitaskActivity"
            android:label="@string/title_activity_report_activity"
            android:theme="@style/AppBaseTheme.NoActionBar" />

        <activity
            android:name="anonymouls.dev.mgcex.app.scanner.ScanActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="anonymouls.dev.mgcex.app.main.DeviceControllerActivity"
            android:label="Device Control"
            android:showOnLockScreen="true"
            android:theme="@style/Theme.AppCompat.DayNight" />

        <activity
            android:name="anonymouls.dev.mgcex.app.data.DataView"
            android:label="Data"
            android:theme="@style/Theme.AppCompat.DayNight" />

        <activity
            android:name="anonymouls.dev.mgcex.app.main.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="anonymouls.dev.mgcex.app.AlarmActivity"
            android:label="@string/title_activity_alarm" />

        <receiver android:name="anonymouls.dev.mgcex.app.backend.PhoneStateListenerBroadcast">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="anonymouls.dev.mgcex.app.backend.UartServiceBroadcastInterpreter"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="anonymouls.dev.mgcex.app.backend.NotificationService"
            android:enabled="true"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <service
            android:name="anonymouls.dev.mgcex.app.backend.UartService"
            android:enabled="true" />
        <service
            android:name="anonymouls.dev.mgcex.app.backend.Algorithm"
            android:enabled="true" />
    </application>



</manifest>